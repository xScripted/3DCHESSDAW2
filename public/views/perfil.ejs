<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="perfil.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat|Raleway:900" rel="stylesheet"> 
    <script src="Javascript/TweenMax.min.js"></script>
</head>
<style>
    body {
        width: 100%;
        height: 100%;
        margin: 0;
        overflow: hidden;
    }
    #perfil {
        position: relative;
        display: grid;
        grid-gap: 2%;
        grid-column-gap: 10%;
        grid-template-columns: 1fr 2fr;
        grid-template-rows: 2fr 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
        margin: auto;
        width: 60%;    
        min-width: 500px;    
        height: 800px;
        box-shadow: 0px 0px 10px black;       
        font-family: Raleway, sans-serif;
        text-align: center;
        font-size: 20px;
        top: 100px;
    }
    #foto {
        margin-left: 10%;
        margin-top: 10%;
        background-image: url(https://img00.deviantart.net/a135/i/2014/181/5/6/chess_icon_for_mac_os_x_by_hamzasaleem-d6yx1yx.png);       
        background-size: contain;
        background-repeat: no-repeat;
        grid-row-start: 1;
        grid-row-end: 3;
    }

    #fotofile {
        position: relative;
        color: white;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
    }
    #perfil div:nth-child(2){
        font-size: 50px;
        font-weight: bold;
        font-style: italic;
        align-self: end;
        margin-left: -20%;
        text-transform: uppercase;        
    }
    #perfil div:nth-child(3){
        font-size: 30px;
        margin-left: -20%;
        font-family: Montserrat, sans-serif;      
    }
    .labels {
        justify-self: end;
        align-self: center;
    }
    .datos {
        justify-self: start;
        align-self: center;
        font-family: Montserrat, sans-serif;   
    }
    #particles {
        position: absolute;
        width: 100%;
        height: 1000px;
        background-image: url('../img/profile.jpg');
        background-size: 100% 100%;
    }   

    
    #menu * {
        transition: 0.3s;
        width: 100%;
        font-weight: bold;
        text-align: center;
    }
    #menu *:hover {
        transition: 0.3s;
        color: white;
        padding: 30px;
        cursor: pointer;
    }

    #menu {
        margin: auto;
        position: absolute;
        display: flex;
        justify-content: space-around;
        align-items: center;
        left: 0;
        right: 0;
        margin-top: 20px;
        width: 50%;
        height: 50px;
        background-color: rgba(0, 0, 0, 0.274);
        z-index: 5;
        font-family: Montserrat, sans-serif;
    }
    input {
        position: absolute;
    }
</style>
<script>
    window.onload = () => {                              
        let minis = document.querySelectorAll('#menu *');
        minis[0].addEventListener('click', () => self.location='/profile');
        minis[1].addEventListener('click', () => self.location='/ranking');
        minis[2].addEventListener('click', () => self.location='/');
        minis[4].addEventListener('click', () => self.location='/logout');
    }
</script>
<body>    
    <div id="particles"></div>
    <script src="../Javascript/particles.js"></script>
    <div id="menu">
        <div> PERFIL </div>      
        <div> RANKING </div>   
        <div> HOME </div>
        <div> <%= user.nick %> </div>
        <div> LOGOUT</div>
    </div>
    <div id="perfil">
        <div id="foto"></div>
        <div><%= user.nick %></div>
        <div><%= user.elo %></div>
        <div class="labels">VDE</div>
        <div class="datos"><%= user.victorias %> / <%= user.derrotas %> / <%= user.empates %></div>
        <div class="labels">TIEMPO PENSANDO</div>
        <div class="datos"><%= user.time %> min</div>
        <div class="labels">NOMBRE COMPLETO</div>
        <div class="datos"><%= user.nombre %></div>
        <div class="labels">E-MAIL</div>
        <div class="datos"><%= user.email %></div>
        <div class="labels">MIEMBRO DESDE</div>
        <div class="datos"><%= user.createdAt %></div>
        <div class="labels">ÃšLTIMA CONEXION</div>
        <div class="datos"><%= user.updatedAt %></div>
    </div>
</body>
</html>

















